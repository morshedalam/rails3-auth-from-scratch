!!!
%html{:lang => "en"}
  %head
    = render "layouts/head"

  %body
    .navbar.navbar-inverse.navbar-fixed-top
      .navbar-inner
        .container
          = link_to(t("Basic Authentication"), root_path, :class => "brand")

          .container.nav-collapse
            %ul.nav.pull-right
              - if current_user.present?
                %li.dropdown
                  %a.dropdown-toggle{:href => "javascript:void(0);", "data-toggle" => "dropdown"}
                    Welcome!
                    = current_user.name
                    %b.caret
                  %ul.dropdown-menu
                    %li= link_to "Manage Users", users_path
                    %li= link_to "Sign Out", logout_path
              - else
                %li= link_to "Sign In", '/login'


    .container{:style => "min-height: 500px;"}
      = render "shared/flash_messages"
      = yield